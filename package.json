{
  "name": "k8s-mcp",
  "version": "1.0.0",
  "description": "Kubernetes Management Control Panel",
  "main": "dist/index.js",
  "scripts": {
    "start": "node -r dotenv/config dist/index.js",
    "dev": "cross-env PORT=8080 ts-node -r dotenv/config src/index.ts",
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "kubernetes",
    "k8s",
    "management",
    "api"
  ],
  "author": "vazylin1124",
  "license": "MIT",
  "dependencies": {
    "@kubernetes/client-node": "^1.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "yaml": "^2.4.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
