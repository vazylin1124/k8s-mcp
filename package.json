{
  "name": "k8s-mcp",
  "version": "1.0.0",
  "description": "Kubernetes MCP Service",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "dev:http": "ts-node -r dotenv/config src/index.ts",
    "dev:smithery": "SMITHERY=true ts-node -r dotenv/config src/index.ts",
    "start:http": "node -r dotenv/config dist/index.js",
    "start:smithery": "SMITHERY=true node -r dotenv/config dist/index.js",
    "start": "node -r dotenv/config dist/index.js",
    "smithery": "./dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "kubernetes",
    "k8s",
    "management",
    "api"
  ],
  "author": "vazylin1124",
  "license": "MIT",
  "dependencies": {
    "@kubernetes/client-node": "^0.20.0",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/ws": "^8.5.10",
    "cross-env": "^7.0.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
